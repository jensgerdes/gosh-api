; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{php, html, twig}]
indent_size = 4

[*.{yml, yaml, json}]
indent_size = 2

[composer.lock]
indent_size = 2

[*.md]
max_line_length = 80
